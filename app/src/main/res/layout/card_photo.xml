<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/photoDimens"
    android:layout_height="@dimen/photoDimens"
    android:layout_marginStart="@dimen/photoMargin"
    cardView:cardCornerRadius="2dp"
    android:layout_marginEnd="@dimen/photoMargin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:contentDescription="@string/photo" />

        <ImageButton
            android:id="@+id/photo_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/delete_photo"
            android:src="@drawable/ic_remove"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>